rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read other profiles in their class (for leaderboard)
    match /users/{userId} {
      allow read: if request.auth != null && 
        resource.data.classCode == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.classCode;
    }
    
    // Attendance logs - users can create their own and read their own
    match /attendance/{logId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow reading attendance logs for leaderboard (same class only)
    match /attendance/{logId} {
      allow read: if request.auth != null && 
        resource.data.classCode == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.classCode;
    }
    
    // Classes - read-only for students, write for teachers
    match /classes/{classId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource == null || resource.data.createdBy == request.auth.uid);
    }
  }
}
